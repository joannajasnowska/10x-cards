---
import Navigation from "../components/Navigation.astro";
import "../styles/global.css";

interface Props {
  title: string;
  showNavigation?: boolean;
  activeNavItem?: "generator" | "flashcards";
}

const { title, showNavigation = false, activeNavItem } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Generator fiszek do nauki sÅ‚ownictwa" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-50">
    <!-- Toast notifications -->
    <Toaster client:load position="top-center" />

    {showNavigation && <Navigation activeItem={activeNavItem} />}

    <main class="container mx-auto px-4 py-6">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
  }
  html {
    font-family: system-ui, sans-serif;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
